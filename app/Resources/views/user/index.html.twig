{% extends 'base.html.twig' %}
{% block title %}{{ parent() }}Gestion des utilisateurs{% endblock %}
{% block body %}
    <section class="admin-content">
        <div class="bg-dark">
            <div class="container  m-b-30">
                <div class="row">
                    <div class="col-12 text-white p-t-40 p-b-90">
                        <h4 class="">  Gestion des utilisateurs</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="container  pull-up">
            <div class="row">
                <div class="col-lg-7">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Liste des Utilisateurs</h5>
                        </div>
                        <div class="card-body ">
                            <div class="table-responsive p-t-10">
                                <table id="example" class="table   " style="width:100%">
                                    <thead>
                                    <tr>
                                        <td>ID</td>
                                        <td>Nom</td>
                                        <td>Connexions</td>
                                        <td>Last</td>
                                        <td>Actions</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ loop.index}}</td>
                                            <td>
                                                {% if (user.enabled) %}
                                                    <span class="text-success">{{user.username}}</span>
                                                {% else %}
                                                    <span class="text-danger">{{user.username}}</span>
                                                {% endif %}
                                            </td>
                                            <td class="text-center">{{ user.loginCount}}</td>
                                            <td class="text-center">{{ user.lastLogin|date('d-m-Y h:i:s')}}</td>
                                            <td class="text-center">
                                                <a href="#"><i class="fa fa-eye"></i></a> |
                                                <a href="#"><i class="fa fa-edit"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--widget card ends-->


                </div>
                <div class="col-lg-5">
                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Enregistrement</h5>
                        </div>
                        <div class="card-body ">
                            <div class="form-row">
                                <div class="col-12 form-group">
                                    <input class="form-control form-control-lg" type="text" placeholder="Nom du fournisseur">
                                </div>
                                <div class="col-12 form-group">
                                    <input class="form-control form-control-lg" type="text" placeholder="Contacts du fournisseur">
                                </div>
                                <div class="col-12 form-group">
                                    <input class="form-control form-control-lg" type="text" placeholder="Email du fournisseur">
                                </div>
                                <div class="col-12 form-group">
                                    <input class="form-control form-control-lg" type="text" placeholder="Localisation du fournisseur">
                                </div>
                                <div class="col-12 form-group">
                                    <textarea name="" id="" cols="30" rows="5" class="form-control form-control-lg"></textarea>
                                </div>
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-primary">Enregistrer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ absolute_url(asset('ressources/assets/bundles/ba78fede76f682cd388ed2abbfd1e1568e76f8a4.js')) }}'></script>
{% endblock %}
