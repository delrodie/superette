{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} Gestion des produits{% endblock %}
{% block body %}
    <section class="admin-content">
        <div class="bg-dark">
            <div class="container  m-b-30">
                <div class="row">
                    <div class="col-12 text-white p-t-40 p-b-90">
                        <h4 class="">  Liste des produits</h4>
                    </div>
                </div>
            </div>
        </div>

        <div class="container  pull-up">
            <div class="row">
                <div class="col-lg-12">

                    <div class="card m-b-30">
                        <div class="card-header">
                            <h5 class="m-b-0">Liste des produits</h5>
                        </div>
                        <div class="card-body ">
                            {% for message in app.flashes('notice') %}
                                <div class="alert alert-success  alert-dismissible fade show" role="alert">
                                    <div class="d-flex">
                                        <div class="icon">
                                            <i class="icon mdi mdi-check-circle-outline"></i>
                                        </div>
                                        <div class="content">
                                            <strong></strong> {{ message|raw }}
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="alert alert-danger  alert-dismissible fade show" role="alert">
                                    <div class="d-flex">
                                        <div class="icon">
                                            <i class="icon mdi mdi-check-circle-outline"></i>
                                        </div>
                                        <div class="content">
                                            <strong></strong> {{ message|raw }}
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                            <div class="table-responsive p-t-10">
                                <table id="example" class="table   " style="width:100%">
                                    <thead>
                                    <tr>
                                        <td>ID</td>
                                        <td>Codes barres</td>
                                        <td>Ref.</td>
                                        <td>Cat√©gories</td>
                                        <td>Noms</td>
                                        <td>P.Ventes</td>
                                        <td>Stock</td>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for produit in produits %}
                                        {% if produit.stock is null %}
                                            <tr class="text-danger">
                                                <td>{{ loop.index }}
                                                <td>{{ produit.codebarre }}
                                                <td>{{ produit.reference }}</td>
                                                <td>{{ produit.categorie.libelle }}</td>
                                                <td>{{ produit.libelle }}</td>
                                                <td class="text-right">{{ produit.prixVente }}</td>
                                                <td class="text-center">
                                                    {% if produit.stock is null %}
                                                        0
                                                    {% else %}
                                                        {{ produit.stock }}
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td>{{ loop.index }} </td>
                                                <td>{{ produit.codebarre }}
                                                <td>{{ produit.reference }}</td>
                                                <td>{{ produit.categorie.libelle }}</td>
                                                <td>{{ produit.libelle }}</td>
                                                <td class="text-right">{{ produit.prixVente }}</td>
                                                <td class="text-center">
                                                    {% if produit.stock is null %}
                                                        0
                                                    {% else %}
                                                        {{ produit.stock }}
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!--widget card ends-->


                </div>
            </div>


        </div>
    </section>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src='{{ absolute_url(asset('ressources/assets/bundles/ba78fede76f682cd388ed2abbfd1e1568e76f8a4.js')) }}'></script>
{% endblock %}
