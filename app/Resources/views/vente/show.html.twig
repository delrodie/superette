{% block body %}
    <h1>Vente</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vente.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ vente.quantite }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ vente.montant }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ vente.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
